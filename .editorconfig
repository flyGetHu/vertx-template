# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true
max_line_length = 120
insert_space_before_opening_brace = true
insert_space_after_comma = true
insert_space_after_semicolon = true
insert_space_around_operators = true
insert_space_within_parentheses = false
insert_space_within_brackets = false
insert_space_within_braces = false
insert_space_after_keywords_in_control_flow_statements = true
insert_space_after_type_cast = true
insert_space_before_method_parentheses = false
insert_space_between_empty_method_parentheses = false
insert_space_between_empty_braces = false
